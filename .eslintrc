{
  "extends": ["airbnb-base", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "blockBindings": true,
      "forOf": true,
      "jsx": true
    }
  },
  "globals": {
    "document": true,
    "window": true,
    "STATIC_URL": true
  },
  "env": {
    "node": true,
    "browser": true,
    "mocha": true
  },
  "rules": {
    "strict": 0,
    "semi": [2, "always"],
    "comma-dangle": [2, "never"],
    "prefer-rest-params": [0],
    "no-unused-expressions": [2, { "allowShortCircuit": true }],
    "new-parens": [0],
    "no-shadow": [0],
    "no-mixed-requires": [0],
    "no-underscore-dangle": [0],
    "quotes": [2, "single"],
    "indent": [2, 2],
    "valid-jsdoc": [2, {
      "requireReturn": false,
      "requireReturnDescription": false,
      "requireParamDescription": false
    }],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
  }
}
